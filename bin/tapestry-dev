#!/usr/bin/env node

'use strict'

const path = require('path')
const fs = require('fs')
const Server = require('../dist/server').default
const Client = require('../dist/build').default
const logger = require('../dist/logger')

const cwd = process.cwd()
const treeClient = path.join(cwd, 'tapestry.js')

if (!fs.existsSync(treeClient))
  logger.error('Couldn\'t find a tapestry.js')

logger.info(`Booting Tapestryâ€¦ \n`)

require('babel-register')({
  presets: ['es2015', 'react']
})

const config = require(treeClient)

if (!config.default.siteUrl)
  logger.error('siteUrl is missing')

new Client({
  cwd,
  env: 'development',
  onComplete: () => new Server({ cwd, config })
})
