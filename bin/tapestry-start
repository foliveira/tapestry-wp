#!/usr/bin/env node

'use strict'

const path = require('path')
const fs = require('fs')
const tapestry = require('../dist/server.bundle').default
const logger = require('../dist/logger')
const cwd = process.cwd()
const env = 'production'

// compiled tapestry config path
const treeServer = path.join(cwd, '.tapestry/app/tapestry.config.js')

logger.info(`Booting Tapestryâ€¦ \n`)

// kick off client build & server
tapestry.boot({
  cwd,
  env,
  config: require(treeServer)
})
